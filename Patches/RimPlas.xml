<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <!--Add linkbale facilities to Rolling Table if RimPlas is installed-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>RimPlas (Continued)</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName="TableRolling"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
            <value>
                <li>RimPlas_DrugCabinet</li>
            </value>
        </match>
    </Operation>

</Patch>