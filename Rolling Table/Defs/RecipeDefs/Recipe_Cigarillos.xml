<?xml version="1.0" encoding="UTF-8"?>
<RecipeDefs>

<RecipeDef>
		<defName>CigarillosRollingTable</defName>
		<label>make cigarillos</label>
		<description>Raw tobacco prepared into a pack of cigarillos. Use can produce a dependency and negative health consequences. Can be produced without equipment, at a rolling table.</description>
		<jobString>Making cigarillos.</jobString>
		<workAmount>200</workAmount>
		<workSpeedStat>TailoringSpeed</workSpeedStat>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<recipeUsers>
		<li>TableRolling</li>
	</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawTobacco</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawTobacco</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Cigarillos>1</Cigarillos>
		</products>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
	
