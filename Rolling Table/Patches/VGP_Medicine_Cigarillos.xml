<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- VGP Medicine Cigarillo Recipes -->
  
<Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationFindMod">
        <mods>
          <li>VGP Garden Medicine</li>
        </mods>
        <success>Always</success>
      </li>
      <li Class="PatchOperationInsert">
        <RecipeDef ParentName="RollAtTableBase">
		      <defName>CigarillosRollingTable</defName>
		      <label>make cigarillos</label>
		      <description>Raw tobacco prepared into cigarillos. Use can produce a dependency and negative health consequences. Can be produced without equipment, at a rolling table.</description>
		      <allowMixingIngredients>false</allowMixingIngredients>
		      <workAmount>200</workAmount>
          <ingredients>
            <li>
              <filter>
					      <thingDefs>
						      <li>RawTobacco</li>
                </thingDefs>
				      </filter>
				      <count>5</count>
			      </li>
          </ingredients>
		      <fixedIngredientFilter>
			      <thingDefs>
				     <li>RawTobacco</li>
			      </thingDefs>
		      </fixedIngredientFilter>
		      <products>
			      <Cigarillos>1</Cigarillos>
		      </products>
	      </RecipeDef>
      </li>
    </operations>
</Operation>
	
</Patch>